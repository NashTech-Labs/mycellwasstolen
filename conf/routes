# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET		/contact-us					controllers.Resources.contactUs
GET		/blog					    controllers.Resources.blog
GET     /faq                        controllers.Resources.faq
GET		/discussionforum           controllers.Resources.discussionforum

GET		/showExampleForm			controllers.Application.showExampleForm
POST	/handleFormExample			controllers.Application.handleFormExample

#registration
GET     /register-stolen-phone      controllers.MobileController.mobileRegistrationForm
GET     /register-new-phone         controllers.MobileController.mobileRegistrationSecureForm
POST	/mobileRegistration			controllers.MobileController.mobileRegistration

GET     /isImeiExist                controllers.MobileController.isImeiExist(imeiId: String)

#Javascript Routes

GET    /javascriptRoutes            controllers.Application.javascriptRoutes 
GET    /mobile                      controllers.MobileController.getImeiMeidList(imeid: String)
GET    /mobileStatus                controllers.MobileController.mobileStatus
GET    /mobileModel					controllers.MobileController.getMobileModels(id:Int)
GET	   /approve					    controllers.AdminController.approve(imeid: String)
GET	   /proofDemanded			    controllers.AdminController.proofDemanded(imeid: String)
GET	   /pending			            controllers.AdminController.pending(imeid: String)
GET	   /sendMailForDemandProof	    controllers.AdminController.sendMailForDemandProof(imeid: String)
GET    /sendMailForApprovedRequest  controllers.AdminController.sendMailForApprovedRequest(imeid: String)
GET	   /changeMobileRegType			controllers.AdminController.changeMobileRegType(imeid: String)


#Admin
GET    /login                      controllers.AuthController.login
POST   /authenticate               controllers.AuthController.authenticate
GET    /logout                     controllers.AuthController.logout
GET    /admin/mobiles              controllers.AdminController.mobiles(status:String)
GET    /admin/mobile               controllers.AdminController.mobilesForAjaxCall(status:String)
GET    /admin/brandForm            controllers.MobileController.brandRegisterForm
POST   /saveMobileName             controllers.MobileController.saveMobileName

GET     /admin/createMobileModelForm      controllers.MobileController.createMobileModelForm
GET		/admin/changeMobileRegType		  controllers.AdminController.changeMobileRegTypeForm
POST    /createMobileModel                controllers.MobileController.createMobileModel
                     
# Map static resources from the /public folder to the /assets URL path
GET   /assets/*file                controllers.Assets.at(path="/public", file)
